@{
    // Index.cshtml
    ViewData["Title"] = "Home Page";
}
@model ASP_NET_Core_with_TypeScript.Controllers.SimpleViewModel;



<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Using the Power of <code>TypeScript</code> to do cool stuff here... </p>

    <div class="input-group" id="search_bar">
        <span class="input-group-text">Search</span>
        <input type="text" placeholder="Title" class="form-control">
        <input type="text" placeholder="Description" class="form-control">
        <input type="text" placeholder="Priority" class="form-control">
    </div>

    <div id="table_of_items" class="container-fluid" style="overflow-x:scroll; max-height:250px">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Priority</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ToDoItems!)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.Priority</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <button type="button" id="export_data_btn" class="btn btn-primary">Export to JSON</button>

    @* <div id="ts-example"> *@
    @*     <br /> *@
    @*     <button type="button" class="btn btn-primary btn-md" onclick="TSButton()"> *@
    @*         Click Me *@
    @*     </button> *@
    @* </div> *@

</div>
